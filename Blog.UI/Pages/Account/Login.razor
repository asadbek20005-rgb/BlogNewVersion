@page "/account/login"
@inherits PageCodeSources.LoginPageCodeSource

<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="login-form">
        <h1 class="login-title">Login</h1>

        <EditForm Model="@Model" OnValidSubmit="Login">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-grid">
                <InputText @bind-Value="Model.PhoneNumber" class="input" placeholder="Phone Number" />
                <InputText @bind-Value="Model.Password" class="input" placeholder="Password" type="password" />

                <button type="submit" class="submit-button">
                    Login
                </button>

                <div class="text-center text-sm mt-2">
                    <a href="/account/register" class="text-blue-600 hover:underline">
                        Don't have an account? Register
                    </a>
                </div>
            </div>
        </EditForm>
    </div>
</div>

<style>
    .login-form {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 1.5rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        margin: auto;
    }

    .login-title {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
        color: #1f2937; /* Gray-800 */
    }

    .form-grid {
        display: grid;
        gap: 1.25rem;
    }

    .input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #d1d5db;
        border-radius: 0.75rem;
        background-color: #f9fafb;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .input:focus {
            background-color: #ffffff;
            border-color: #2563eb; /* blue-600 */
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.25);
            outline: none;
        }

    .submit-button {
        background-color: #2563eb;
        color: white;
        padding: 0.75rem;
        font-size: 1rem;
        font-weight: 600;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .submit-button:hover {
            background-color: #1d4ed8; /* blue-700 */
            box-shadow: 0 4px 14px rgba(37, 99, 235, 0.4);
        }

        .submit-button:focus {
            outline: none;
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.3);
        }

</style>
