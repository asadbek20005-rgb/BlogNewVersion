@page "/profile"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inherits PageCodeSources.ProfilePageCodeSource
<Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
    <Authorized>
        <div class="profile-card">
            <div class="profile-header">
                <img src="https://via.placeholder.com/150" alt="Profile Photo" class="profile-photo">
                <div class="profile-info">
                    <h2 class="profile-name">@Model.FirstName @Model.LastName</h2>
                </div>
            </div>

            <div class="profile-details">
                <p><strong>First Name:</strong> @Model.FirstName</p>
                <p><strong>Last Name:</strong> @Model.LastName</p>
                <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                <p><strong>Bio:</strong> @Model.Bio</p>
                <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
            </div>

            <div class="profile-actions">
                <button class="edit-button">Edit Profile</button>
                <button class="logout-button">Logout</button>
            </div>
        </div>


        <style>
            body {
                background-color: #f3f4f6;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            .profile-card {
                max-width: 600px;
                margin: 50px auto;
                background-color: #fff;
                padding: 30px;
                border-radius: 16px;
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s ease-in-out;
            }

                .profile-card:hover {
                    transform: scale(1.01);
                }

            .profile-header {
                display: flex;
                align-items: center;
                margin-bottom: 25px;
            }

            .profile-photo {
                width: 100px;
                height: 100px;
                border-radius: 50%;
                object-fit: cover;
                margin-right: 20px;
                border: 3px solid #3b82f6;
            }

            .profile-info {
                flex: 1;
            }

            .profile-name {
                font-size: 26px;
                font-weight: 700;
                margin-bottom: 5px;
                color: #111827;
            }

            .profile-title {
                font-size: 16px;
                color: #6b7280;
            }

            .profile-details {
                border-top: 1px solid #e5e7eb;
                padding-top: 20px;
                margin-top: 20px;
                font-size: 16px;
                color: #374151;
            }

                .profile-details p {
                    margin-bottom: 10px;
                }

            .profile-actions {
                margin-top: 30px;
                display: flex;
                justify-content: space-between;
            }

            .edit-button, .logout-button {
                padding: 12px 25px;
                font-size: 15px;
                font-weight: 600;
                border: none;
                border-radius: 8px;
                cursor: pointer;
                transition: background-color 0.3s;
            }

            .edit-button {
                background-color: #3b82f6;
                color: white;
            }

                .edit-button:hover {
                    background-color: #2563eb;
                }

            .logout-button {
                background-color: #ef4444;
                color: white;
            }

                .logout-button:hover {
                    background-color: #b91c1c;
                }

        </style>
    </Authorized>
    <NotAuthorized>
        <h1>401</h1>
</NotAuthorized>
</Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
